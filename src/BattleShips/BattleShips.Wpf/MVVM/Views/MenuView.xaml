<UserControl x:Class="BattleShips.Wpf.MVVM.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BattleShips.Wpf.MVVM.Views"
             xmlns:navigation="clr-namespace:BattleShips.Wpf.MVVM.Helper.NavigationService"
             xmlns:viewModels="clr-namespace:BattleShips.Wpf.MVVM.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:MenuViewModel}"
             d:DesignHeight="833" d:DesignWidth="1180"
             Background="Aquamarine">
    <StackPanel>
        <Label Content="Überschrift"/>
        <Button Content="Einzelspieler"
                Command="{Binding UpdateCurrentViewModelCommand}"
                CommandParameter="{x:Static navigation:ViewsEnum.ShipPlacement}"/>
        <Button Content="Mehrspieler"
                IsEnabled="False"
                Command="{Binding UpdateCurrentViewModelCommand}"
                CommandParameter="{x:Static navigation:ViewsEnum.ShipPlacement}"/>
    </StackPanel>
</UserControl>
