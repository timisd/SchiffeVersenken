<UserControl x:Class="BattleShips.Wpf.MVVM.Views.ShipPlacementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:BattleShips.Wpf.MVVM.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:ShipPlacementViewModel}"
             d:DesignHeight="853" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0"
               Grid.ColumnSpan="2">
            <Label.Content>
                <StackPanel Orientation="Horizontal">
                    <Label Content="{Binding Headline}"/>
                </StackPanel>
            </Label.Content>
        </Label>
        
        <Grid Grid.Row="1" Grid.Column="0" Margin="20" x:Name="Ocean">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Row="0" Grid.Column="1" Content="A"/>
            <Label Grid.Row="0" Grid.Column="2" Content="B"/>
            <Label Grid.Row="0" Grid.Column="3" Content="C"/>
            <Label Grid.Row="0" Grid.Column="4" Content="D"/>
            <Label Grid.Row="0" Grid.Column="5" Content="E"/>
            <Label Grid.Row="0" Grid.Column="6" Content="F"/>
            <Label Grid.Row="0" Grid.Column="7" Content="G"/>
            <Label Grid.Row="0" Grid.Column="8" Content="H"/>
            <Label Grid.Row="0" Grid.Column="9" Content="I"/>
            <Label Grid.Row="0" Grid.Column="10" Content="J"/>
            
            <Label Grid.Row="1" Grid.Column="0" Content="1"/>
            <Label Grid.Row="2" Grid.Column="0" Content="2"/>
            <Label Grid.Row="3" Grid.Column="0" Content="3"/>
            <Label Grid.Row="4" Grid.Column="0" Content="4"/>
            <Label Grid.Row="5" Grid.Column="0" Content="5"/>
            <Label Grid.Row="6" Grid.Column="0" Content="6"/>
            <Label Grid.Row="7" Grid.Column="0" Content="7"/>
            <Label Grid.Row="8" Grid.Column="0" Content="8"/>
            <Label Grid.Row="9" Grid.Column="0" Content="9"/>
            <Label Grid.Row="10" Grid.Column="0" Content="10"/>
        </Grid>
        
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Label Content="Ausrichtung:"/>
                <Button Content="{Binding OrientationString}"
                        Command="{Binding ChangeOrientationCommand}"/>
            </StackPanel>
            <StackPanel Name="ShipTypesGroup" Grid.Row="1" Grid.RowSpan="5">
                <RadioButton Name="RbSubmarine"
                             GroupName="shipTypesGroup"
                             IsChecked="true"
                             IsEnabled="{Binding EnableSubmarineRadioButton}"
                             Content="{Binding SubmarinesRadioButtonContent}"/>
                <RadioButton Name="RbDestroyer"
                             GroupName="shipTypesGroup"
                             IsEnabled="{Binding EnableDestroyerRadioButton}"
                             Content="{Binding DestroyerRadioButtonContent}"/>
                <RadioButton Name="RbCruiser"
                             GroupName="shipTypesGroup"
                             IsEnabled="{Binding EnableCruiserRadioButton}"
                             Content="{Binding CruiserRadioButtonContent}"/>
                <RadioButton Name="RbBattleship"
                             GroupName="shipTypesGroup"
                             IsEnabled="{Binding EnableBattleshipRadioButton}"
                             Content="{Binding BattleshipRadioButtonContent}"/>
                <RadioButton Name="RbCarrier"
                             GroupName="shipTypesGroup"
                             IsEnabled="{Binding EnableCarrierRadioButton}"
                             Content="{Binding CarrierRadioButtonContent}"/>
            </StackPanel>
            <StackPanel Grid.Row="6"
                        Orientation="Horizontal">
                <!-- <Button Content="Alles Zurücksetzten"/> -->
                <Button Content="Bestätigen"
                        IsEnabled="{Binding CanContinue}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
